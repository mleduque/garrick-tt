  HaveSpell(CLERIC_SILENCE_15_FOOT)
  !Range(Nearestenemyof(Myself),12)
  Or(2)
  See([PC.GENERAL_ITEM.0.CLERIC])
  See([PC.GENERAL_ITEM.0.MAGE])
